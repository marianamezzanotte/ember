<table class="table table-striped">
   <thead>
      <tr>
         <th>Receta</th>
         <th>Categoria</th>
         <th>Tiempo de Preparacion</th>
		 <th>Acciones</th>
      </tr>
   </thead>
   <tbody id="listasRecetas">
     {{#each model.information as |m|}}
      <tr>
         <td>{{m.thing.nr}}</td>
         <td>{{m.thing.c}}</td>
         <td>{{m.thing.time}}</td>
		     <td><button type="button" class="btn btn-default btn-lg">
				     <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
			       </button>
      			 <button type="button" class="btn btn-default btn-lg">
      				<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
      			</button>
      	</td>
    </tr>
    {{/each}}
   </tbody>
</table>

<form>
	<input class ="js-numGrupo" type = "hidden" value="26">
	<div>
		<label>Receta</label>
		{{input value=nr type='text' class="form-control" placeholder="Ingrese nombre.."}}
	</div>
	<div>
		<label>Comensales</label>
		<select class="form-control">
			<option>1</option>
			<option>2</option>
			<option>3</option>
			<option>4</option>
			<option>5</option>
			<option>6</option>
		</select>
	</div>

	<div>
		<label>Categorias</label>
	</div>
  {{input value=c type='text' class="form-control"}}


	<div>
		<label>Tiempo de Preparacion</label>
    {{input value=time type='text' class="form-control"}}
	</div>

	<div class = "Ingredientes">
		<textarea class="form-control" rows="3" placeholder="Ingrese los ingredientes necesarios para la receta"></textarea>
	</div>

	<div class = "Preparacion">
		<textarea class="form-control" rows="3" placeholder="Ingrese los pasos necesarios para la receta"></textarea>
	</div>

	<div>
		<label>Autor</label>
		<input type="text" class="form-control">
	</div>

	<div class="form-group">
		<label for="exampleInputEmail1">Email address</label>
		<input type="email" class="form-control" id="exampleInputEmail1" placeholder="Email">
	</div>

	<button type="submit"  {{action "guardar" nr c time}}>Enviar</button>
	<button type="cancelar" id= "cancelar" class="btn btn-default">Cancelar</button>
	<button type="button" class="btn btn-default js-enviarTres">Agregar 3</button>

</form>

{{outlet}}
